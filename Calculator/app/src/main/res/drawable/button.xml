<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <stroke android:width="1dp" android:color="#e57200" />
            <gradient android:angle="180" android:startColor="#e57200" android:endColor="#e57200" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="1dp" android:color="#fff" />
            <gradient android:angle="180" android:startColor="#00000000" android:endColor="#00000000" />
        </shape>
    </item>
</selector>