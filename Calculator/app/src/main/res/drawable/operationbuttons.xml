        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="1dp" android:color="#fff" />
            <gradient android:angle="180" android:startColor="#843f0a" android:endColor="#843f0a" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
